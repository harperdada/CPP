cmake_minimum_required(VERSION 3.16)
project(triangle_tests CXX)

set(CMAKE_CXX_STANDARD 11)
set(CMAKE_CXX_STANDARD_REQUIRED ON)

find_package(GTest REQUIRED)

add_executable(test_triangle test_triangle.cpp)
target_include_directories(test_triangle PRIVATE ${CMAKE_CURRENT_SOURCE_DIR})
target_link_libraries(test_triangle GTest::gtest GTest::gtest_main)

enable_testing()
add_test(NAME triangle_tests COMMAND test_triangle)
